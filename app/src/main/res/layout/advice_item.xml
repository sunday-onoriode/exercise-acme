<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/open_quote"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/image_content_des"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_quote_open"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/advice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/horizontal_margin"
        android:text="@string/default_message"
        android:textSize="@dimen/advice_font_size"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/open_quote"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/close_quote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/image_content_des"
        android:src="@drawable/ic_quote_close"
        app:layout_constraintTop_toBottomOf="@id/advice"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>